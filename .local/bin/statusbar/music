#get cmus data
if [ ! -z "$(pgrep -x cmus$)" ]; then
    cmusartist="$(cmus-remote --server 0.0.0.0 --passwd passwd -Q 2> /dev/null | grep --text '^tag artist ' | sed -e 's/tag artist //')"
    cmustitle="$(cmus-remote --server 0.0.0.0 --passwd passwd -Q 2> /dev/null | grep --text '^tag title ' | sed -e 's/tag title //')"
    cmustimeTot="$(cmus-remote --server 0.0.0.0 --passwd passwd -Q 2> /dev/null | grep --text '^duration' | sed -e 's/duration //')"
    cmustime="$(cmus-remote --server 0.0.0.0 --passwd passwd -Q 2> /dev/null | grep --text '^position' | sed -e 's/position //')"
    cmustimeTot="$(date -d @$((cmustimeTot)) +%M:%S)"
    cmustime="$(date -d @$((cmustime)) +%M:%S)"

    case $(cmus-remote -Q --server 0.0.0.0 --passwd passwd 2> /dev/null | grep --text "^status" | sed -e 's/status //') in
        playing)
            emoji="â–¶" ;;
        paused)
            emoji="â¸" ;;
    esac

    cmustitle=$(echo $cmustitle | sed "s/ ([^)]*)//g")
    #[ ${#cmustitle} -gt 50 ] && cmustitle="$(echo $cmustitle | cut -b 1-50)â‹¯"
    #[ ${#cmusartist} -gt 20 ] && cmusartist="$(echo $cmusartist | cut -b 1-20)â‹¯"
    out="($emoji$cmustime/$cmustimeTot) $cmusartist - $cmustitle"
    [ "$cmustimeTot" != "00:00" ] || return 
    [ ${#out} -le 70 ] && echo " $out " || echo "$(echo $out | cut -b 1-70)â‹¯ "
fi

