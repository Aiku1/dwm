#vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed "s/[^0-9]*//g;1q")
#
#if [ "$vol" -gt "70" ]; then
#	icon="ðŸ”Š"
#elif [ "$vol" -lt "30" ]; then
#	icon="ðŸ”ˆ"
#else
#	icon="ðŸ”‰"
#fi
