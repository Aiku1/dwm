super + shift + q
    kill -9 `xdotool getwindowfocus getwindowpid`

super + w
    st -e sudo nmtui

super + shift + w; {b, f, c}
    {brave-browser, firefox, chromium}

super + shift + Home
    killall screenkey || (screenkey --scr 1; screenkey --scr 0)

super + b
    feh --bg-fill ~/Pictures/Wallpapers/wall.png

XF86MonBrightnessUp
    xbacklight -inc 10; ~/.config/dwm_status.sh

XF86MonBrightnessDown
    xbacklight -dec 10; ~/.config/dwm_status.sh

# Play/Pause
XF86AudioPlay
    cmus-remote -u 2> /dev/null; dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause 2> /dev/null; ~/.config/dwm_status.sh

# Next
XF86AudioNext
    cmus-remote -n 2> /dev/null; dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next 2> /dev/null; ~/.config/dwm_status.sh

# Previous
XF86AudioPrev
    cmus-remote -r 2> /dev/null; dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous 2> /dev/null; ~/.config/dwm_status.sh

# Volume up
XF86AudioRaiseVolume
    amixer -D pulse sset Master 2%+; ~/.config/dwm_status.sh
# Volume down
XF86AudioLowerVolume
    amixer -D pulse sset Master 2%-; ~/.config/dwm_status.sh

# Volume up 10
alt + XF86AudioRaiseVolume
    amixer -D pulse sset Master 10%+; ~/.config/dwm_status.sh
# Volume down 10
alt + XF86AudioLowerVolume
    amixer -D pulse sset Master 10%-; ~/.config/dwm_status.sh

# Volume mute
XF86AudioMute
    amixer -D pulse sset Master toggle; ~/.config/dwm_status.sh

alt + p; p
    pavucontrol

# Terminal
super + shift + Return
    st

# Lock
XF86{ScreenSaver,Sleep}
    slock &; systemctl suspend

# Rofi
super + d
    rofi -show run -theme monokai

#mount/umount
super + m; {m, u}
    st -e {dmenu_mount, dmenu_umount}

# screenshot
super + a
    t=$(date +%s); maim -s ~/tmp/$t.png 2> /dev/null; xclip -sel clip -t image/png -i ~/tmp/$t.png

super + shift + a
    t=$(date +%s); maim ~/tmp/$t.png 2> /dev/null; xclip -sel clip -t image/png -i ~/tmp/$t.png

# unicode
super + shift + k
    /home/usr/.config/unicode.sh

# display mode picker
super + shift + m
   ~/.config/screenmode.sh

super + r
    st -e ranger

super + shift + r
    st -e ranger ~/uni/Appunti/Anno\ I

super + v; {v, e, c}
    {st -e nvim, emacs, code}

shift + XF86AudioPlay
    spotify

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + F11
    [ $(printf "No\nYes" | rofi -dmenu -i -nb darkred -sb red -sf  white -nf gray -p "Shutdown computer?") = Yes ] && sudo -A shutdown -h now
